<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:layout_marginBottom="1pt"
        android:text="0"
        android:textSize="40pt" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buAC"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="AC"
                android:background="@color/cardview_shadow_start_color"></Button>

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="+/-"></Button>

            <Button
                android:id="@+id/buDivide"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="/"></Button>
            <Button
                android:id="@+id/buMultiply"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="*"></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="7"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"></Button>

            <Button
                android:id="@+id/bu8"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="8"
                android:onClick="numberEvent"></Button>

            <Button
                android:id="@+id/bu9"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="9"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"></Button>
            <Button
                android:id="@+id/buPercent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="%"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="4"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"></Button>

            <Button
                android:id="@+id/bu5"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="5"
                android:onClick="numberEvent"></Button>

            <Button
                android:id="@+id/bu6"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="6"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"></Button>
            <Button
                android:id="@+id/buPlus"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="+"></Button>
        </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="1"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"></Button>

            <Button
                android:id="@+id/bu2"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="2"
                android:onClick="numberEvent"></Button>

            <Button
                android:id="@+id/bu3"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="3"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"></Button>
            <Button
                android:id="@+id/buMinus"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="-"></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/bu0"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:layout_width="48pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="0"
                android:onClick="numberEvent"></Button>

            <Button
                android:id="@+id/buDot"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="."
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"></Button>
            <Button
                android:id="@+id/buEqual"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/cardview_shadow_start_color"
                android:text="="></Button>


        </TableRow>




    </TableLayout>





    </LinearLayout>
